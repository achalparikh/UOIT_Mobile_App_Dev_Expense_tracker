<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtCategoryBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:ems="10"
        android:hint="@string/budget"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="167dp" />

    <Button
        android:id="@+id/btnCategoryBudget"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryBudgetSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Add Budget" />

    <Spinner
        android:id="@+id/categoryBudgetSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtCategoryBudget"
        android:layout_marginTop="62dp"
        android:entries="@array/categories" />

    <Button
        android:id="@+id/finishBudgetActivity"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCategoryBudget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Finish" />
</RelativeLayout>